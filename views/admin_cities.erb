<h3>Cities (Admin)</h3>

<% if @cities.any? %>
  <ul>
    <% @cities.sort_by(&:name).each do |city| %>
    <li><a href="/cities/<%= city.id %>/edit"><%= city.name %></a></li>
    <% end %>
  </ul>
  <% else %>
  <p>There are currently no cities to display.</p>
<% end %>

<a href="/cities/new">Add city</a>
